						"id": "b2859241-16a7-4bcb-8942-bc92b2811514",
						"exec": [
							"//参考 js语法 http://javascript.ruanyifeng.com/",
							" ",
							"pm.test(\"验证码为200\",   // 我们的一个测试步骤中数据验证",
							"    function () {",
							"        pm.response.to.have.status(200);",
							"    }",
							");",
							"",
							"pm.test(\"data的数据长度应该为1\", function () {",
							"    ",
							"    var jsonData = pm.response.json();",
							"    console.log(\"json data ==\",jsonData);",
							"    // 获取json data的长度",
							"    console.log(\"data length == \",jsonData[\"data\"].length);",
							"    // 实际结果值与期望值对比",
							"    pm.expect(jsonData[\"data\"].length).to.eql(10);",
							"    ",
							"});",
							"",
							"pm.test(\"所有的dta内容 tab值应该为share\",function(){",
							"    // 拿到返回结果 json值",
							"    var jsondata = pm.response.json();",
							"    // 取json数据中的data字段值",
							"    var data = jsondata[\"data\"];",
							"    // data是个数组，进行for循环操作",
							"    for(let d of data){",
							"        console.log(\"tab ===\", d[\"tab\"])",
							"        // 判断每个对象中的tab值应该等于share",
							"        pm.expect(d[\"tab\"]).to.eql(\"share\")",
							"    }",
							"})",
							"",
